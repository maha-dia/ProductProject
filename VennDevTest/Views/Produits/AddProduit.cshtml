@model Core.Entities.Produit
@{ 
    ViewData["title"] = "Ajouter un produit";
}
<div class="card">
    <div class="card-header"><h3>Ajouter un nouveau produit</h3></div>
    <div class="card-body">
        <form method="post" asp-action="SaveProduit">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Nom</label>
                <input type="text" name="Nom" value="@Model.Nom" />
                @Html.ValidationMessageFor(m => m.Nom, "", new { @class = "text-danger" })
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Description</label>
                <input type="text" class="fom-control" name="Description" value="@Model.Description" />
                @Html.ValidationMessageFor(m => m.Description, "")
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Prix</label>
                <input type="text" name="Prix" value="@Model.Prix" />
                @Html.ValidationMessageFor(m => m.Prix,"", new { @class = "text-danger" })
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Image</label>
                <input type="text" name="Image" value="@Model.Image" />
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Quantité</label>
                <input type="text" name="quantite" value="@Model.Quantite" />
                @Html.ValidationMessageFor(m => m.Quantite, "", new { @class = "text-danger" })
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">En Stock</label>
                <select name="value">
                    <option value="@Model.EnStock">true</option>
                    <option value="@Model.EnStock">false</option>
                </select>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Ajouter</button>
            </div>
        </form>
    </div>
</div>
