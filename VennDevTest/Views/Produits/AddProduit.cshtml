@model VennDevTest.Entities.Produit
@{ 
    ViewData["title"] = "Ajouter un produit";
}
<div>
    <div><h3>Ajouter un nouveau produit</h3></div>
    <div>
        <fom method="post" asp-action="SaveProduit">
            <div class="form-group">
                <label class="custom-control-label">Nom</label>
                <input type="text" name="Nom" value="@Model.Nom" />
                @Html.ValidationMessageFor(m => m.Nom, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="custom-control-label">Description</label>
                <input type="text" class="fom-control" name="Nom" value="@Model.Description" />
                @Html.ValidationMessageFor(m => m.Description, "")
            </div>
            <div class="form-group">
                <label class="custom-control-label">Prix</label>
                <input type="text" name="Nom" value="@Model.Prix" />
                @Html.ValidationMessageFor(m => m.Prix,"", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="custom-control-label">Image</label>
                <input type="text" name="Nom" value="@Model.Image" />
            </div>
            <div class="form-group">
                <label class="custom-control-label">Quantité</label>
                <input type="text" name="Nom" value="@Model.Quantite" />
                @Html.ValidationMessageFor(m => m.Quantite, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="custom-control-label">En Stock</label>
                <select name="value">
                    <option value="@Model.EnStock">true</option>
                    <option value="@Model.EnStock">false</option>
                </select>
                
            </div>
            <div>
                <button type="submit" class="btn-primary">Ajouter</button>
            </div>
        </fom>
    </div>
</div>
